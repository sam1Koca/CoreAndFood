@model CoreAndFood.Data.Models.Food
@{
    ViewData["Title"] = "FoodGet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update Food Page</h1>
<br />

@using(Html.BeginForm("FoodUpdate", "Food", FormMethod.Post))
{
    <h4>Food İd</h4>
    @Html.TextBoxFor(x => x.FoodID , new {@class="form form-control"})

    <h4>Food Name</h4>
    @Html.TextBoxFor(x => x.Name , new {@class="form form-control"})

   <h4>Category Name</h4>
    @Html.TextBoxFor(x => x.CategoryID , new {@class="form form-control"})
    @*Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.value, new {@class = "form form-control"}) *@

    <h4>Price ₺</h4>
    @Html.TextBoxFor(x => x.Price , new {@class="form form-control"})

    <h4>Stock</h4>
    @Html.TextBoxFor(x => x.Stock , new {@class="form form-control"})

    <h4>Image URL</h4>
    @Html.TextBoxFor(x => x.ImageURL , new {@class="form form-control"})

    <h4>Description</h4>
    @Html.TextBoxFor(x => x.Description , new {@class="form form-control"})

    <br />

    <button class="btn btn-info">Save</button>
}
